<?xml version="1.0" encoding="UTF-8"?><components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
    <scr:component enabled="true" name="com.ciandt.aem.impl.HelloServiceImpl">
        <implementation class="com.ciandt.aem.impl.HelloServiceImpl"/>
        <service servicefactory="false">
            <provide interface="com.ciandt.aem.HelloService"/>
        </service>
        <property name="service.pid" value="com.ciandt.aem.impl.HelloServiceImpl"/>
        <reference name="repository" interface="org.apache.sling.jcr.api.SlingRepository" cardinality="1..1" policy="static" bind="bindRepository" unbind="unbindRepository"/>
    </scr:component>
    <scr:component enabled="true" immediate="true" name="com.ciandt.aem.impl.filters.LoggingFilter">
        <implementation class="com.ciandt.aem.impl.filters.LoggingFilter"/>
        <service servicefactory="false">
            <provide interface="javax.servlet.Filter"/>
        </service>
        <property name="service.ranking" type="Integer" value="-700"/>
        <property name="sling.filter.scope" value="REQUEST"/>
        <property name="service.pid" value="com.ciandt.aem.impl.filters.LoggingFilter"/>
    </scr:component>
    <scr:component enabled="true" name="com.ciandt.aem.sling.CRXLoginSlingServlet">
        <implementation class="com.ciandt.aem.sling.CRXLoginSlingServlet"/>
        <service servicefactory="false">
            <provide interface="javax.servlet.Servlet"/>
        </service>
        <property name="sling.servlet.paths" value="/bin/services/crx/login"/>
        <property name="sling.servlet.methods">
            GET
            POST
        </property>
        <property name="service.pid" value="com.ciandt.aem.sling.CRXLoginSlingServlet"/>
        <reference name="repository" interface="org.apache.sling.jcr.api.SlingRepository" cardinality="1..1" policy="static" bind="bindRepository" unbind="unbindRepository"/>
        <reference name="resolverFactory" interface="org.apache.sling.api.resource.ResourceResolverFactory" cardinality="1..1" policy="static" bind="bindResolverFactory" unbind="unbindResolverFactory"/>
    </scr:component>
</components>
